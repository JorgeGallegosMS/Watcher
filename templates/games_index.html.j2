{% extends 'base.html.j2' %}

{% block content %}

<div class="container">
    <h1 class="text-center">Watcher</h1>
    <div class="row">
        {% for game in games %}
        <div class="col-sm-6">
            <h2>{{ game.name }}</h2>
            <a href="/games/{{ game._id }}"><img src="{{ game.image }}" alt="{{ game.name }}" height="350" width="550"></a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock  %}